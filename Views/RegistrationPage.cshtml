<section style="margin-top: 50px;">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">

                <h2> 
                    @Model.Content.Title
                </h2>
                <div class="alert alert-info" role="alert">
                    @Model.Content.IntroText
