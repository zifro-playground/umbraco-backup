@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.GenericPage>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "Master.cshtml";
}

@{
    string headerColor = Model.Content.GetPropertyValue<string>("headerColor");
}

<header class="text-white header-thin" style="background-color: #@headerColor">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                
                <h1>@Model.Content.Name</h1>
                
            </div>
        </div>
    </div>
</header>

<section>
    <div class="container">
        
        <div class="row">
            <div class="col-lg-10 mx-auto">
                
                <h3>@Model.Content.PageTitle</h3>
                <p>@Model.Content.PageText</p>
            
            </div>
        </div>
        
            
    </div>
</section>