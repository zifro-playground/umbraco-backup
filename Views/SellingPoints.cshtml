                    </div>
                    <div class="col-md-10">
                        <h5 style="text-transform: uppercase; text-weight: ">@Model.Content.ShortText1</h5>
                        @Html.Raw(@Model.Content.LongerText1)
                    </div>
                </div>
                
                <div class="row m-4 align-items-center">
                    <div class="col-md-2 text-center pb-3">
                        <i class="fas fa-star fa-4x animate-hover"></i>
                    </div>
