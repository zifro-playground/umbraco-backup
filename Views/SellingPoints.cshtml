                        <h5 style="text-transform: uppercase;">@Model.Content.ShortText2</h5>
                        @Html.Raw(@Model.Content.LongerText2)
                    </div>
                </div>

                <div class="row m-4 align-items-center">
                    <div class="col-md-2 text-center pb-3">
                        <i class="fas fa-check-circle fa-4x animate-hover"></i>
                    </div>
                    <div class="col-md-10">
                        <h5 style="text-transform: uppercase;">@Model.Content.ShortText3</h5>
